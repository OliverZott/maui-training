<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_training.Views.Components.UserView">
    
    <StackLayout Orientation="Horizontal"
                 Padding="5"
                 Margin="7">
        <Label Text="{Binding FirstName}" FontSize="Medium"/>
        <Label Text=" " FontSize="Medium"/>  <!-- For spacing between first and last name -->
        <Label Text="{Binding LastName}" FontSize="Medium"/>
    </StackLayout>
</ContentView>
