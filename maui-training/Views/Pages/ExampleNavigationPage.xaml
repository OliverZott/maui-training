<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_training.Views.Pages.ExampleNavigationPage"
             Title="ExampleNavigationPage">
    
    <VerticalStackLayout>
        
        <Label 
        Text="Various sample pages."
        VerticalOptions="Center" 
        HorizontalOptions="Center" />


        <Button Text="Go to User Input/View Page" 
                Margin="5"
                Clicked="OnUserInputButtonClicked"/>
        <Button Text="Go to Phone Translation Page" 
                Margin="5"
                Clicked="OnPhoneButtonClicked"/>
        <Button Text="Go to Photo-Testing Page"
                Margin="5"
                Clicked="OnPhotoButtonClicked"/>
        <Button Text="Go to Test Page" 
                Margin="5"
                Clicked="OnTestButtonClicked"/>

    </VerticalStackLayout>
    
</ContentPage>